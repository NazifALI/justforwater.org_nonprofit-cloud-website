<div class="row">
  <div class="col-md-8 col-md-offset-1">
<h1>Application Contacts</h1>

<table>
  <thead colspan="3" style="text-align:center;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @application_contacts.each do |application_contact| %>
      <tr>
        <td><%= application_contact.name %></td>
        <td><%= application_contact.email %></td>
        <td><%= application_contact.phone %></td>
        <td><%= application_contact.description %></td>
        <td><%= link_to 'Show', application_contact %></td>
        <td><%= link_to 'Edit', edit_application_contact_path(application_contact) %></td>
        <td><%= link_to 'Destroy', application_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Application Contact', new_application_contact_path %>
  </div>
</div>
