<div class="row">
  <div class="col-md-12 text-center">
<h1>Application Sponsors</h1>

<div class="container">
<div class="table-responsive">
  <table class="table text-center">
    <tr>
      <th>Name</th>
      <th colspan="3">Description</th>
      <th colspan="3">Image</th>
    </tr>
  </thead>

  <tbody>
    <% @application_sponsors.each do |application_sponsor| %>
      <tr>
        <td><%= application_sponsor.name %></td>
        <td><%= application_sponsor.description %></td>
        <td><%= application_sponsor.image_id %></td>
        <td><%= link_to 'Show', application_sponsor %></td>
        <td><%= link_to 'Edit', edit_application_sponsor_path(application_sponsor) %></td>
        <td><%= link_to 'Destroy', application_sponsor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
